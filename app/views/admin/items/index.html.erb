<h2>Current Items List</h2>
<%= link_to "Create New Item", new_admin_item_path %>
<table>
  <% @items.each do |item| %>
  <tr>
    <td>
      <%= item.title %>
    </td>
    <td>
      <%= item.description %>
    </td>
    <td>
      <%= number_to_currency(item.price.to_f / 100) %>
    </td>
    <td>
      <%= image_tag item.image.url %>
    </td>
    <td>
      <%= link_to "Edit Item", edit_admin_item_path(item) %>
    </td>
  </tr>
  <% end %>
</table>
